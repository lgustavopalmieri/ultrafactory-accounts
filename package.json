{
  "name": "ultrafactory-accounts",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "test": "npm run tsc -- --noEmit && jest",
    "tsc": "tsc",
    "dev": "nodemon src/infrastructure/http/server.ts",
    "migrate": "db-migrate up --config ./src/infrastructure/database/postgres/database.js --migrations-dir ./src/infrastructure/database/postgres/migrations",
    "migrate:down": "db-migrate down --config ./src/infrastructure/database/postgres/database.js --migrations-dir ./src/infrastructure/database/postgres/migrations",
    "starthttp": "nodemon src/infrastructure/http/server.ts",
    "format": "prettier --write .",
    "prepare": "husky",
    "lint:check": "eslint \"src/**/*.{ts,tsx}\" && prettier --check \"src/**/*.{ts,tsx,css}\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix && prettier --write \"src/**/*.{ts,tsx,css}\""
  },
  "dependencies": {
    "axios": "^1.7.7",
    "body-parser": "^1.20.3",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^16.0.0",
    "express": "^4.21.1",
    "nodemon": "^3.1.7",
    "pg-promise": "^11.5.0",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.148",
    "@swc/jest": "^0.2.20",
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "git-commit-msg-linter": "^5.0.7",
    "husky": "^9.0.11",
    "jest": "^27.5.1",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "supertest": "^6.2.2",
    "ts-node": "^10.6.0",
    "typescript": "^4.5.5",
    "typescript-eslint": "^7.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx,css}": "npm run lint"
  }
}
